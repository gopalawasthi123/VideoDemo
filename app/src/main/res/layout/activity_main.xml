<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

  <androidx.fragment.app.FragmentContainerView
      android:id="@+id/video_top_frag"
      android:name="com.example.videodemo.ui.Fragments.TopVideoFragment"
      android:layout_width="match_parent"
      tools:layout="@layout/fragment_top_video"
      android:layout_height="100dp"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/video_main_frag"
        android:name="com.example.videodemo.ui.Fragments.VideoMainFragment"
        android:layout_width="match_parent"
        tools:layout="@layout/fragment_video_main"
        android:layout_height="match_parent"/>


</LinearLayout>